create relation x:host (x.ipAddr == "192.168.160.1") memberOf (since:"10:11:39") y:network-domain (y.netAddr == "192.168.160.0")

create relation x:service (x.name == "httpd1") runAt() y:host (y.ipAddr == "192.168.148.1")
